package modele;

import org.joda.time.DateTime;
import org.joda.time.Period;
import org.joda.time.Interval;

public class PointLivraison{
	private Intersection monInter;
	protected DateTime heureDepart;
	protected DateTime heureArrivee;
	private int duree;
	
	public PointLivraison(Intersection unInter, int uneDuree) {
		this.monInter = unInter;
		this.heureDepart = null;
		this.heureArrivee = null;
		duree = uneDuree;
	}
	
	public PointLivraison(Intersection unInter, DateTime heureDepart,DateTime heureArrivee) {
		this.monInter = unInter;
		this.heureDepart = heureDepart;
		this.heureArrivee = heureArrivee;
		Period period = new Interval(heureDepart, heureArrivee).toPeriod();

		duree = period.getMinutes();
	}
	
	public int getDuree() {
		return duree;
	}

	@Override
	public String toString() {
		return "PointLivraison [duree=" + duree + ", idAdresse=" + idAdresse + ", heureDepart=" + heureDepart
				+ ", heureArrivee=" + heureArrivee + "]";
	}

	
	
	
	
}
